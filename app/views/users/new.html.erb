<h2>Signup today!</h2>

<%= form_for @user do |f| %>
  <%= f.label :email %>
  <br>
  <%= f.text_field :email %>
  <br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password%>
  <br>

  <%= f.label :first_name %>
  <br>
  <%= f.text_field :first_name %>
  <br>

  <%= f.label :last_name %>
  <br>
  <%= f.text_field :last_name %>
  <br>

  <%= f.label :location %>
  <br>
  <%= f.text_field :location %>
  <br>

  <%= f.submit 'Submit' %>
<% end %>
